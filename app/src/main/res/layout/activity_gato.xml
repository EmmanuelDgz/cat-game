    <Button
        android:id="@+id/gato12"
        android:layout_width="99dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/gato22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gato11"
        app:layout_constraintTop_toBottomOf="@+id/gato02" />

    <Button
        android:id="@+id/gato20"
        android:layout_width="98dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/gato21"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gato10" />

    <Button
        android:id="@+id/gato21"
        android:layout_width="99dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/gato22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gato20"
        app:layout_constraintTop_toBottomOf="@+id/gato11" />

    <Button
        android:id="@+id/gato22"
        android:layout_width="99dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/labelTurno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gato21"
        app:layout_constraintTop_toBottomOf="@+id/gato12" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
