        android:layout_marginStart="16dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/gato21"
        app:layout_constraintEnd_toStartOf="@+id/gato12"
        app:layout_constraintHorizontal_bias="0.5"
