<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GatoActivity">

    <TextView
        android:id="@+id/labelPartida"
        android:layout_width="328dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="X    ="
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelPartida" />

    <TextView
        android:id="@+id/labelX"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAlignment="textStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="O    ="
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/labelX"
        app:layout_constraintStart_toEndOf="@+id/labelX" />

    <TextView
        android:id="@+id/labelO"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <Button
        android:id="@+id/gato00"
        android:layout_width="98dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/gato10"
        app:layout_constraintEnd_toStartOf="@+id/gato01"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/gato01"
        android:layout_width="99dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/gato11"
        app:layout_constraintEnd_toStartOf="@+id/gato02"
