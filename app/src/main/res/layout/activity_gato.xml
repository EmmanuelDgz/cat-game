        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/labelTurno"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
